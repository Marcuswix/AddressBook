<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AddressBookMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AddressBookMaui"
    xmlns:pages="clr-namespace:AddressBookMaui.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="My Address Book">

    <ShellContent
        Title="Contact List" ContentTemplate="{DataTemplate pages:ContactListPage}" Route="ContactListPage" />
    <ShellContent
        Title="Add Contact" ContentTemplate="{DataTemplate pages:ContactAddPage}" Route="ContactAddPage" />
    <ShellContent
        Title="Edit Contact" ContentTemplate="{DataTemplate pages:ContactDetailsPage}" Route="ContactDetailsPage" />
    <ShellContent 
        Title="Contact Details" ContentTemplate="{DataTemplate pages:TheRealContactDetailsPage}" Route="TheRealContactDetailsPage"/>

</Shell>
